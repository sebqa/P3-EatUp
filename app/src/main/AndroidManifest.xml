<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sebastian.appdrawer">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".appdrawer.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".appdrawer.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".appdrawer.CreateItem"
            android:label="@string/title_activity_create_ad"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".appdrawer.ItemDetails"
            android:label="ItemDetails"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".appdrawer.CreateAccountActivity"
            android:label="@string/activity_create_account"></activity>
        <activity
            android:name=".appdrawer.LoginSignUp"
            android:label="EatUp"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".appdrawer.LogInActivity"></activity>
    </application>

</manifest>